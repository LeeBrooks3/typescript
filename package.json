{
  "name": "@leebrooks3/typescript",
  "version": "1.0.0",
  "description": "A library of core TypeScript things.",
  "main": "dist/index.js",
  "keywords": [
    "TypeScript"
  ],
  "author": "Lee Brooks <leebrooks93@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/lodash": "^4.14.116",
    "axios": "^0.18.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@leebrooks3/tslint-config": "git+https://git@github.com/leebrooks3/tslint-config.git",
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "test": "jest",
    "test:ci": "npm run test -- --coverage --runInBand",
    "test:dev": "npm run test -- --watch",
    "tslint": "node_modules/.bin/tslint 'src/**/*.ts'"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "build",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
