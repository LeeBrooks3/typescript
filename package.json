{
  "name": "@leebrooks3/typescript",
  "version": "1.0.0",
  "description": "A library of core TypeScript things.",
  "main": "dist/index.js",
  "types": "src/index.d.ts",
  "keywords": [
    "TypeScript"
  ],
  "author": "Lee Brooks <leebrooks93@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/lodash": "^4.14.116",
    "axios": "^0.18.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@leebrooks3/tslint-config": "git+https://git@github.com/leebrooks3/tslint-config.git",
    "@types/faker": "^4.1.3",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/webpack": "^4.4.11",
    "faker": "^4.1.0",
    "jest": "^23.5.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "webpack": "^4.17.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0"
  },
  "scripts": {
    "build": "npm run clean && npm run tsc && webpack",
    "build:dev": "npm run clean && npm run tsc && webpack --config='webpack.config.dev.ts'",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:ci": "npm run test -- --coverage --runInBand",
    "test:dev": "npm run test -- --watch",
    "tsc": "node_modules/.bin/tsc",
    "tslint": "node_modules/.bin/tslint 'src/**/*.ts'"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "build",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
